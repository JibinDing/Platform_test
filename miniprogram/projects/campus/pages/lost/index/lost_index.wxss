@import "../../../style/skin.wxss";

.main {
	padding: 0
} 

.list {
	width: 100%;
	display: flex;
	flex-direction: column;
	padding: 25rpx;
}

.list .item {
	width: 100%;
	display: flex;
	flex-direction: column;
	padding: 0rpx;
	background-color: #fff;
	margin-bottom: 30rpx;
	align-items: flex-start;
	border-radius: 20rpx;
	position: relative;
	overflow: hidden;
}

.list .item .arrow {
	position: absolute;
	right: 4rpx;
	top: 50%;
	color: #aaa;
	font-size: 24rpx;
}

.list .item .mark-status {
	position: absolute;
	top: 0;
	right: 0;
	font-size: 24rpx;
	padding: 6rpx 16rpx;
	border-bottom-left-radius: 10rpx;
	border-top-right-radius: inherit;
}

.list .item .mark-mine {
	position: absolute;
	bottom: 0;
	right: 0;
	font-size: 24rpx;
	padding: 6rpx 16rpx;
	border-top-left-radius: 10rpx;
	border-bottom-right-radius: inherit;
}

.list .top {
	width: 100%;
	padding: 25rpx;
	display: flex;
}

.list .bottom {
	width: 100%;
	padding: 15rpx 25rpx;
	display: flex;
}

.list .bottom .info {
	width: 100%;
	display: flex;
	justify-content: flex-start;
	align-items: center;
}

.list .bottom .info>view {
	text-align: center;
	font-size: 22rpx;
	color: #bbb;
	margin-right: 20rpx;
}

.list .bottom .info>view>text {
	margin-right: 4rpx;
}

.list .bottom .info>view:last-child {
	border-right: 0;
}

.list .left {
	width: 60rpx;
	height: 60rpx;
	border-radius: 50%;
	margin-right: 10rpx;
}

.list .right {
	flex: 1;
	display: flex;
	flex-direction: column;
	padding: 6rpx 10rpx;
}

.list .right .title {
	display: flex;
	padding: 0 0 16rpx;
	justify-content: space-between;
	align-items: baseline;
	margin-top: 4rpx;
	z-index: 9;
	border-bottom: 2rpx solid #ddd;
	margin-bottom: 10rpx;
}

.list .right .title .name {
	font-size: 28rpx;
}

.list .right .title .name .type {
	background-color: #f2f2f2;
	color: #000;
	font-size: 24rpx;
	padding: 6rpx 8rpx;
	text-align: center;
	margin-right: 10rpx;
	border-radius: 4rpx;
}

.list .right .title .date {
	font-size: 22rpx;
	color: #bbb;
}

.list .right .desc {
	margin-top: 12rpx;
	width: 100%;
	display: flex;
	font-size: 26rpx;
	line-height: 1.3;
	color: #666;
}

.list .right .desc .t1 {
	color: #999;
	width: 140rpx;
}

.list .right .desc .t2 {
	flex: 1;
}

.list .right .pic {
	margin-top: 20rpx;
	width: 100%;
	display: flex;
	flex-wrap: wrap;
}

.list .right .pic image {
	height: 130rpx;
	width: 130rpx;
	margin-right: 10rpx;
	margin-bottom: 10rpx;
	border-radius: 6rpx;
}

.list .right .pic image.img1 {
	height: 180rpx;
	width: 180rpx;
}

.list .right .pic image.img2 {
	height: 150rpx;
	width: 150rpx;
}

.list .right .pic image.img3,
.list .right .pic image.img4,
.list .right .pic image.img5,
.list .right .pic image.img6,
.list .right .pic image.img7,
.list .right .pic image.img8,
.list .right .pic image.img9 {
	height: 130rpx;
	width: 130rpx;
}

.list .right .line1 {
	width: 100%;
	text-align: right;
	padding: 10rpx 0;
	font-size: 26rpx;
}

.list .right .line2 {
	width: 100%;
	text-align: right;
	padding: 0rpx 0;
	font-size: 22rpx;
	color: #666;
	opacity: .6;
}

.list .oprt {
	width: 100%;
	display: flex;
	justify-content: flex-end;
	padding: 5rpx 0;
	margin-top: -10rpx;
	margin-bottom: 50rpx;
}

.list .oprt>view {
	padding: 8rpx 20rpx;
	font-size: 24rpx;
	background-color: #f2f2f2;
	margin-right: 16rpx;
	border-radius: 8rpx;
}

.list .oprt>view:last-child {
	margin-right: 4rpx;
}

.list .oprt>view>text {
	margin-right: 6rpx;
}


.list .right .data {
	width: 100%;
	display: flex;
	justify-content: flex-end;
	padding: 5rpx 0;
	margin-top: 10rpx;
}

.list .right .data>view {
	padding: 8rpx 30rpx;
	font-size: 24rpx;
	background-color: #f2f2f2;
	margin-right: 16rpx;
	border-radius: 4rpx;
}

.list .right .data>view>text {
	margin-right: 6rpx;
}

.post {
	width: 100%;
	position: fixed;
	left: 30rpx;
	bottom: 80rpx;
	display: flex;
	justify-content: center;
	align-items: center;
	display: flex;
}

.post>view {
	z-index: 999;
	font-size: 35rpx;
	background-color: var(--projectColor);
	color: #fff;
	padding: 16rpx 160rpx;
	border-radius: 40rpx;
}